    "jasmine": "^3.6.4",
    "karma": "^6.0.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-typescript": "^5.2.0",
    "rollup": "^2.38.4",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.6",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "files": [
    "dist",
    "lib",
