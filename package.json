    "url": "https://github.com/xroah/video-player/issues"
  },
  "homepage": "https://github.com/xroah/video-player#readme",
  "keywords": [
    "html5",
    "video",
    "player"
  ],
  "devDependencies": {
    "@types/karma": "^5.0.1",
    "parcel": "^2.0.0-nightly.562",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
